{
  "name": "sweet-bundler",
  "version": "1.0.0",
  "author": {
    "name": "borvelt",
    "email": "borvelt@gmail.com"
  },
  "license": "ISC",
  "repository": "https://github.com/borvelt/sweet-bundler.git",
  "description": "Make webpack bundler and babel sweety lovey",
  "main": "dist/index.js",
  "module": "src/index.js",
  "scripts": {
    "clean": "rm -rf web dist",
    "prettify:js": "prettier-eslint --write \"**/*.js\"",
    "prettify:ts": "prettier-tslint fix \"**/*.ts\"",
    "prettify:check": "tslint-config-prettier-check ./tslint.json",
    "lint": "npm run prettify:js && npm run prettify:ts",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "dev": "webpack-dev-server --open --config webpack.config/dev.js",
    "web": "npm run lint && webpack --config webpack.config/web.js",
    "dist": "npm run lint && webpack --config webpack.config/dist.js",
    "test": "jest --no-cache"
  },
  "pre-commit": {
    "run": [
      "precommit-msg",
      "lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js|jsx)"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.0.0",
    "@types/jest": "^23.3.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-prettier": "^3.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "pre-commit": "^1.2.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-tslint": "^0.4.0",
    "style-loader": "^0.23.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.1",
    "typescript-eslint-parser": "^20.0.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.8"
  },
  "keywords": [
    "webpack",
    "bundler",
    "bable7",
    "hmr",
    "object-maker",
    "tslint",
    "eslint",
    "prettify",
    "eslint-prettier",
    "tslint-prettier",
    "tslint-config-prettier"
  ]
}
